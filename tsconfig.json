{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "incremental": true,
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "es2020",
    "tsBuildInfoFile": ".tsbuildinfo",
    "types": ["@types/node", "vitest/globals"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
